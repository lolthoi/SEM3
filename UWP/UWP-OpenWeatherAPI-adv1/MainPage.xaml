<Page
    x:Class="UWP_OpenWeatherAPI_adv1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_OpenWeatherAPI_adv1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Background="Green">
        <StackPanel VerticalAlignment="Center">
            <Image Name="ResultImage" Width="200" Height="200" HorizontalAlignment="Center"/>
            <TextBlock Name="TempTextBlock" Foreground="White" FontSize="40" HorizontalAlignment="Center"/>
            <TextBlock Name="DescriptionTextBlock" Foreground="White" FontSize="36" HorizontalAlignment="Center"/>
            <TextBlock Name="LocationTextBlock" Foreground="White" FontSize="30" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </StackPanel>
</Page>
