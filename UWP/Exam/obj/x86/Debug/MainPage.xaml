<Page
    x:Class="Exam.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Exam"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment = "Left"  
                   TextWrapping = "Wrap"
                   Text = "ADD CONTACT"
                   VerticalAlignment = "Top" 
                   Margin = "421,180,0,0"
                   Width = "100" Height="20"/>
        <Button x:ConnectionId='2' x:Name="AddContact"
                Content="Add Contact"
                Margin="321,470,0,0"
                                        
                Height="39" Width="300" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='3' x:Name = "addname"
                   HorizontalAlignment = "Left" 
                   TextWrapping = "Wrap"
                   Text = "Name" 
                   VerticalAlignment = "Top" 
                   Margin = "320,220,0,0"
                   Width = "60" Height="20"/>
        <TextBox x:ConnectionId='4' x:Name = "addNameText" HorizontalAlignment = "Left" TextWrapping = "Wrap"  
         VerticalAlignment = "Top" Margin = "320,260,0,0" Width = "300" Height="40"/>
        <TextBlock x:ConnectionId='5' x:Name = "addphone" HorizontalAlignment = "Left"  
         TextWrapping = "Wrap" Text = "PhoneNumber" VerticalAlignment = "Top"  
         Margin = "320,340,0,0" Width = "100" Height="20"/>
        <TextBox x:ConnectionId='6' x:Name = "addPhoneText" HorizontalAlignment = "Left" TextWrapping = "Wrap"  
         VerticalAlignment = "Top" Margin = "320,380,0,0" Width = "300" Height="40"/>
        <TextBlock x:ConnectionId='7' x:Name = "message" HorizontalAlignment = "Left"  
            Margin = "323,541,0,0" TextWrapping = "Wrap"  
            VerticalAlignment = "Top" Width = "297" Height = "96" Text=""/>


        <TextBlock HorizontalAlignment = "Left"  
            TextWrapping = "Wrap"
            Text = "SEARCH CONTACT"
            VerticalAlignment = "Top" 
            Margin = "821,179,0,0"
            Width = "135" Height="20"/>
        <Button x:ConnectionId='8' x:Name="SeachContact"
            Content="Search Contact"
            Margin="721,0,0,0"
                                      
            Height="40" Width="320"/>
        <TextBlock x:ConnectionId='9' x:Name = "textBlock_Copy"
            HorizontalAlignment = "Left" 
            TextWrapping = "Wrap"
            Text = "Name" 
            VerticalAlignment = "Top" 
            Margin = "720,219,0,0"
            Width = "60" Height="20"/>
        <TextBox x:ConnectionId='10' x:Name = "searchNameText" HorizontalAlignment = "Left" TextWrapping = "Wrap"  
            VerticalAlignment = "Top" Margin = "720,259,0,0" Width = "320" Height="41"/>

        <TextBlock x:ConnectionId='11' x:Name = "searchResult" HorizontalAlignment = "Left"  
         Margin = "720,480,0,0" TextWrapping = "Wrap"  
         VerticalAlignment = "Top" Width = "320" Height = "160" Text=""/>
     
    </Grid>
</Page>

